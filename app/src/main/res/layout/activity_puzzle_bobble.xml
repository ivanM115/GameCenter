<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/puzzle_bobble_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_bg"
    android:orientation="vertical"
    android:padding="@dimen/spacing_md">

    <!-- Header with title and stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_md">

        <TextView
            android:id="@+id/puzzle_bobble_title"
            style="@style/TitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_bobble_title_screen" />

        <Button
            android:id="@+id/puzzle_bobble_new"
            style="@style/GameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent_green"
            android:text="@string/game_bobble_new" />
    </LinearLayout>

    <!-- Stats row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_md">

        <TextView
            android:id="@+id/puzzle_bobble_score_label"
            style="@style/StatsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_bobble_score" />

        <TextView
            android:id="@+id/puzzle_bobble_score_value"
            style="@style/StatsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:text="0" />

        <TextView
            android:id="@+id/puzzle_bobble_time_label"
            style="@style/StatsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_bobble_time" />

        <TextView
            android:id="@+id/puzzle_bobble_time_value"
            style="@style/StatsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />
    </LinearLayout>

    <!-- Game area -->
    <com.example.gamecenter.PuzzleBobbleView
        android:id="@+id/puzzle_bobble_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
